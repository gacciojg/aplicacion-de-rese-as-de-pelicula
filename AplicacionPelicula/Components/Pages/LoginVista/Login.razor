@page "/"
@using AplicacionPelicula.Modelos
@using AplicacionPelicula.Servicios
@inject LoginService LoginService
@inject NavigationManager Navigation

<style>
    body, .page {
        background-color: #121212 !important;
        color: #fff;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .login-container {
        max-width: 380px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
    }

        .login-container h3 {
            margin-bottom: 25px;
            font-size: 26px;
            color: #f1c40f;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border-radius: 8px;
        border: none;
        outline: none;
        font-size: 16px;
    }

    .btn {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        margin-top: 10px;
    }

    .btn-primary {/*Ingresar*/
        background-color: #3498db;
        border: none;
    }

    .btn-primary:hover {
        background-color: #2980b9;
    }

    .btn-secondary {/*registrarse*/
        background-color: #2ecc71;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #27ae60;
        }

    .text-danger {
        margin-top: 10px;
        font-weight: bold;
        color: #e74c3c;
    }

    .input-group-text{
        display: flex;
        align-items: center; /*centro el icono verticalmente*/
        justify-content: center;
        background-color: #2c2c2c;
        border: none;
        border-radius: 10px 0 0 8px;
        color: #f1c40f;
        padding: 16px;
        height: 100%;/*esto me asegura que iguale la altura del input*/
    }

    
</style>

<div class="login-container">
    <h3>
        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-door-open" viewBox="0 0 16 16">
            <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1" />
            <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117M11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5M4 1.934V15h6V1.077z" />
        </svg>
        Iniciar Sesion
    </h3>

    <div class="mb-3"><!--campo usuario-->
        <label>Usuario:</label>
        <div class="input-group">
            <span class="input-group-text">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-envelope" viewBox="0 0 16 16">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                </svg>
            </span>
            <input type="text" @bind="username" class="form-control" placeholder="Ingrese su usuario" />
        </div>
    </div>

    <div class="mb-3"><!--campo contraseña-->
        <label>Contraseña:</label>
        <div class="input-group">
            <span class="input-group-text" >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-plus" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 7.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0v-1.5H6a.5.5 0 0 1 0-1h1.5V8a.5.5 0 0 1 .5-.5" />
                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z" />
                </svg>
            </span>
            <input type="password" @bind="password" class="form-control" placeholder="Ingrese su Contraseña" />
        </div>
    </div>

    <button class="btn btn-primary" @onclick="LoginUsuario">Ingresar</button>
    <button class="btn btn-secondary" @onclick="IrRegistro">Registrarse</button>

    <p class="text-danger">@mensajeError</p>
</div>
@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string mensajeError = string.Empty;

    private async Task LoginUsuario()
    {
        mensajeError = string.Empty;//limpia mensajes anteriores 

        var (exito, mensaje, usuario) = await LoginService.validarUsuario(username, password);//es el punto de conexion entre la ui y la autenticacion

        if (exito && usuario != null)
        {
            if(usuario.Rol == "Administrador")
            {
                Navigation.NavigateTo("/menu");//si esta bien, se reedirige al menu
            } else if(usuario.Rol == "Usuario")
            {
                Navigation.NavigateTo("/gestionReseñas");
            }
            else
            {
                mensajeError = "no tienes permiso para acceder";
            }
        }
        else
        {
            mensajeError = "usuario o contraseña incorrectos";
        }
    }

    private void IrRegistro()
    {
        Navigation.NavigateTo("/Registro");
    }
}

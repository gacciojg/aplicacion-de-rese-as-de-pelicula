@page "/Menu"
@inject NavigationManager navigationManager

<style>
    /*Fondo y tipografia coherentes*/
    body, .page {
        background: linear-gradient(135deg, #000 0%, #1a1a1a 100%) !important;
        color: #fff;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .menu-container {
        max-width: 420px;
        margin: 32px auto;
        padding: 16px;
        text-align: center;
    }

    /*Titulo*/
    .menu-title {
        color: #f5c518;
        font-size: 28px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: .5px;
        margin: 0 0 18px;
        padding-bottom: 8px;
        border-bottom: 2px solid #f5c518;
        display: inline-block;
    }

    /*Lista*/
    .menu-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        gap: 12px;
    }

    .menu-link {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 14px 16px;
        border-radius: 12px;
        background: #1e1e1e;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        border: 1px solid #2a2a2a;
        box-shadow: 0 6px 18px rgba(0,0,0,.35);
        transition: transform .15s ease, border-color .15s ease, background .15s ease;
    }

    .menu-link:hover {
        background: #262626;
        border-color: #f5c518;
        transform: translateY(-1px);
    }

    /*Estado activo del NavLink*/
    .menu-link.active {
        border-color: #f5c518;
        background: #242424;
    }

    .menu-link svg {
        width: 20px;
        height: 20px;
        fill: #f5c518;
        flex-shrink: 0;
    }
</style>


